---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
const text_whatsapp = import.meta.env.PUBLIC_TEXT_WHATSAPP as string;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<a
			target="__blank"
			href={`https://wa.me/998973623?text=Hola,${text_whatsapp}`}
			class="w-16 fixed bottom-4 right-4 z-50 cursor-pointer animation-pulse hover:opacity-80"
			><img src={"/whatsapp.png"} alt="btn_whatsapp" class="" /></a
		></body
	>
	<Header />
	<main class="pt-32">
		<slot />
	</main>
	<Footer />
</html>

<style is:global>
	@import url("https://fonts.googleapis.com/css2?family=Nerko+One&display=swap");
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
</style>
